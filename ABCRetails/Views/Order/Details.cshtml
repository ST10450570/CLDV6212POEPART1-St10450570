@model ABCRetails.Models.Order

@{
    ViewData["Title"] = "Details";
}

<h1 class="mb-4">Order Details</h1>

<div class="card shadow-sm mb-4">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Order Information</h4>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped mb-0">
                <tbody>
                    <tr>
                        <th class="w-25">Partition Key</th>
                        <td>@Html.DisplayFor(model => model.PartitionKey)</td>
                    </tr>
                    <tr>
                        <th>Row Key</th>
                        <td>@Html.DisplayFor(model => model.RowKey)</td>
                    </tr>
                    <tr>
                        <th>Timestamp</th>
                        <td>@Html.DisplayFor(model => model.Timestamp)</td>
                    </tr>
                    <tr>
                        <th>Order ID</th>
                        <td>@Html.DisplayFor(model => model.OrderId)</td>
                    </tr>
                    <tr>
                        <th>Customer ID</th>
                        <td>@Html.DisplayFor(model => model.CustomerId)</td>
                    </tr>
                    <tr>
                        <th>Username</th>
                        <td>@Html.DisplayFor(model => model.Username)</td>
                    </tr>
                    <tr>
                        <th>Product ID</th>
                        <td>@Html.DisplayFor(model => model.ProductId)</td>
                    </tr>
                    <tr>
                        <th>Product Name</th>
                        <td>@Html.DisplayFor(model => model.ProductName)</td>
                    </tr>
                    <tr>
                        <th>Order Date</th>
                        <td>@Html.DisplayFor(model => model.OrderDate)</td>
                    </tr>
                    <tr>
                        <th>Quantity</th>
                        <td>@Html.DisplayFor(model => model.Quantity)</td>
                    </tr>
                    <tr>
                        <th>Unit Price</th>
                        <td>@Html.DisplayFor(model => model.UnitPrice)</td>
                    </tr>
                    <tr>
                        <th>Total Price</th>
                        <td>@Html.DisplayFor(model => model.TotalPrice)</td>
                    </tr>
                    <tr>
                        <th>Status</th>
                        <td>@Html.DisplayFor(model => model.Status)</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>

<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-primary">
        <i class="fas fa-edit me-1"></i> Edit
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left me-1"></i> Back to List
    </a>
</div>
